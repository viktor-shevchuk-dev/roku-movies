<?xml version="1.0" encoding="utf-8"?>
<component name="MovieListScreen" extends="Group" initialFocus="homeGrid">
  <script type="text/brightscript" uri="../../utils/center-horizontally.brs"/>
  <script type="text/brightscript" uri="../../utils/set-font-size.brs"/>
  <script type="text/brightscript" uri="../../utils/get-random-video-url.brs"/>
  <script type="text/brightscript" uri="../../utils/generate-image-url.brs"/>
  <script type="text/brightscript" uri="./movie-list.screen.brs"/>
  <interface>
    <field id="content" type="roArray" onChange="onDataChanged"/>
    <field id="title" type="string" onChange="onTitleChanged"/>
    <field
      id="movieSelected"
      type="assocarray"
      alias="homeGrid.itemSelected"
    />
    <function name="updateDummyVideos"/>
  </interface>
  <children>
    <Label
      id="heading"
      translation="[0, 60]"
      font="font:MediumBoldSystemFont"
    />
    <PosterGrid
      id="homeGrid"
      translation="[100, 175]"
      basePosterSize="[300, 450]"
      itemSpacing="[58, 90]"
      caption1NumLines="1"
      caption2NumLines="1"
      numColumns="5"
      numRows="10"
    />
  </children>
</component>