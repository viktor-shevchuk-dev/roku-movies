<?xml version="1.0" encoding="utf-8" ?>
<component name="HomeScreen" extends="Group">
  <script
    type="text/brightscript"
    uri="../../utils/get-item-from-row-list.brs"
  />
  <script type="text/brightscript" uri="./home.screen.brs" />
  <interface>
    <field
      id="pageSelected"
      type="assocArray"
      alias="headerList.rowItemSelected"
    />
    <field
      id="searchForMoviesPageSelected"
      type="assocArray"
      alias="search.buttonSelected"
    />
    <function name="setHeaderListContent" />
    <field
      id="movieSelected"
      type="assocArray"
      alias="moviesListsOfDifferentGenres.rowItemSelected"
    />
   </interface>
   <children> 
      <Poster id="previousBgImg" translation="[0, 0]" blendColor="0x808080FF"> 
      <Poster id="currentBgImg" translation="[0, 0]" blendColor="0x808080FF"> 
         <Label
          id="logo"
          height="64"
          font="font:LargeBoldSystemFont"
          text="EPAM-TV"
          translation="[50, 50]"
          vertAlign="center"
          color="0x00CED1FF"
        />
        <RowList
          id="headerList"
          translation="[400, 50]"
          itemComponentName="HeaderListItem"
          rowItemSize="[[320, 64]]"
          itemSize="[1000, 64]"
          rowItemSpacing="[[40, 0]]"
        /> 
        <Button
          translation="[1786, 50]"
          id="search"
          iconUri=""
          focusedIconUri=""
          showFocusFootprint="true"
          focusFootprintBitmapUri="pkg:/images/icons/search.icon.png"
          focusBitmapUri="pkg:/images/icons/search-focused.icon.png"
          maxWidth="64"
          minWidth="64"
          height="64"
        />
        <MoviesListsOfDifferentGenres
          id="moviesListsOfDifferentGenres"
          translation="[0, 560]"
          itemComponentName="MovieItemOfSpecificGenre"
          itemSize="[1920, 330]"
          itemSpacing="[0, 80]"
          rowItemSize="[[220, 330]]"
          rowItemSpacing="[[20, 0]]"
          focusXOffset="[50, 50]"
          rowLabelOffset="[[50, 8]]"
          showRowLabel="[true]"
          showRowCounter="[true]"
          variableWidthItems="[true]"
          rowFocusAnimationStyle="fixedFocusWrap"
        /> 
       </Poster>    
      </Poster>    
    </children>
</component>
