<?xml version="1.0" encoding="utf-8"?>
<component name="GenreTitle"
  extends="Group">
  <interface>
    <field id="content"
      type="node"
      onChange="genreTitleHandler" />
  </interface>
  <script type="text/brightscript"
    uri="./genre-title.component.brs" />
  <children>
    <Rectangle id="skeleton"
      width="220"
      height="28"
      color="0xFFFFFF">
      <Rectangle color="0x696969FF"
        width="220"
        height="28"
        id="loader"/>
    </Rectangle>

    <Animation id="animation"
      duration="1.5"
      repeat="true"
      easeFunction="inQuartic">
      <FloatFieldInterpolator key="[0.0, 0.5, 1.0]"
        keyValue="[ 1.0, 0.0, 1.0 ]"
        fieldToInterp="loader.opacity" />
    </Animation>

    <Label id="label"
      visible="false"/>
  </children>
</component>
 