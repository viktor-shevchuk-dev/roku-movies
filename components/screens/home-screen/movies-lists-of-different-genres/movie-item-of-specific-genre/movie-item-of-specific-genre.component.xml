<?xml version="1.0" encoding="utf-8"?>
<component name="MovieItemOfSpecificGenre"
  extends="Group">
  <interface>
    <field id="itemContent"
      type="node"
      onChange="itemContentChanged"/>
  </interface>
  <script type="text/brightscript"
    uri="./movie-item-of-specific-genre.component.brs" />
  <children>
    <Rectangle color="0x696969FF"
      width="220"
      height="330"
      id="skeleton">
      <Rectangle color="0xFFFFFF"
        width="35"
        height="330"
        id="loader" />
    </Rectangle>

    <Poster id="poster"
      width="220"
      height="330"
      visible="false" />
    <Animation id="animation"
      duration="1"
      repeat="true"
      easeFunction="outCubic">
      <Vector2DFieldInterpolator key="[ 0.0, 1.0 ]"
        keyValue="[ [0, 0], [185, 0] ]"
        fieldToInterp="loader.translation" />
    </Animation>
  </children>
</component>
 