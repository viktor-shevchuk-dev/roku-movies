<?xml version="1.0" encoding="utf-8"?>
<component name="GenreMovieItem"
  extends="Group">
  <interface>
    <field id="itemContent"
      type="node"
      onChange="itemContentChangeHandler"/>
    <field id="itemHasFocus"
      type="bool" />
  </interface>
  <script type="text/brightscript"
    uri="./genre-movie-item.component.brs" />
  <children>
    <Rectangle id="skeleton"
      width="220"
      height="330"
      color="0xFFFFFF">
      <Rectangle color="0x696969FF"
        width="220"
        height="330"
        id="loader"/>
    </Rectangle>

    <Animation id="animation"
      duration="1.5"
      repeat="true"
      easeFunction="inQuartic">
      <FloatFieldInterpolator key="[0.0, 0.5, 1.0]"
        keyValue="[ 1.0, 0.0, 1.0 ]"
        fieldToInterp="loader.opacity" />
    </Animation>

    <Poster id="poster"
      width="220"
      height="330"
      visible="false" />
  </children>
</component>
 