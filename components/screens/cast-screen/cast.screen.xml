<?xml version="1.0" encoding="utf-8" ?>
<component name="CastScreen" extends="Group" initialFocus="castGrid">
    <script type="text/brightscript" uri="pkg:/components/utils/helpers.brs" />
    <script type="text/brightscript" uri="./cast.screen.brs" />
    <interface>
      <field
      id="personSelected"
      type="assocarray"
      alias="castGrid.itemSelected"
    />
      <field id="content" type="roAssociativeArray" onChange="onCastChanged" />
      </interface>
    <children>
    <Label
      id="heading"
      text="Cast"
      translation="[0, 60]"
      font="font:MediumBoldSystemFont"
    />            
    <PosterGrid
      id="castGrid"
      translation="[100, 175]"
      basePosterSize="[400, 600]"
      itemSpacing="[40, 40]"
      caption1NumLines="1"
      caption2NumLines="1"
      numColumns="4"
      numRows="4"
    />
    </children>
</component>
