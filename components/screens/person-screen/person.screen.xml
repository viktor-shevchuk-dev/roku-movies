<?xml version="1.0" encoding="utf-8" ?>
<component name="PersonScreen" extends="Group" initialFocus="biographyContent">
	<interface> 
		<field
      id="content"
      type="node"
      alwaysnotify="true"
      onChange="onContentChange"
    />
		<field id="fetchPersonDetails" type="int" />
		<field id="fetchKnownFor" type="int" />
		<field id="personDetails" type="assocarray" onChange="onPersonDetailsChanged" />
		<field id="knownForMovies" type="roArray" onChange="onKnownForMoviesChanged" />
    <field
      id="knownForMovieSelected"
      type="assocarray"
      alias="knownForList.rowItemSelected"
    />
   	</interface>
	<script type="text/brightscript" uri="./person.screen.brs" />
	<script type="text/brightscript" uri="../../utils/helpers.brs" />
	<children> 
		<Poster id="photo" translation="[90, 50]" />
		<Label id="name" font="font:MediumBoldSystemFont" translation="[730, 52]" />
		<Label
      id="biography"
      font="font:MediumBoldSystemFont"
      translation="[730, 136]"
      text="Biography"
    />
		<Group translation="[730, 186]">
      <Rectangle
        id="textRectangle"
        width="1108"
        height="400"
        color="0x101010C0"
      >
        <ScrollableText id="biographyContent" translation="[ 20, 20 ]" />
        <Rectangle id="instructionbar" color="0x222222FF">
          <Rectangle id="upDownnInstruct" color="0x10101000">
            <Poster
              translation="[ 0, 10 ]"
              uri="pkg:/images/dpad_updn_hd.png"
            />
            <Label
              width="300"
              translation="[ 90, 10 ]"
              text="Scroll Up/Down"
              horizAlign="right"
            />
          </Rectangle>
        </Rectangle>
      </Rectangle>
    </Group>
    <Label
      id="knownFor"
      font="font:MediumBoldSystemFont"
      translation="[730, 604]"
      text="Known For"
    />
    <ZoomRowList
      id="knownForList"
      translation="[730, 622]"
      itemComponentName="SimpleGridItem"
      rowItemAspectRatio="[0.548]"
      rowItemZoomHeight="[368]"
    />
 	</children>
</component>
